<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGray"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGray"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/borderColor"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutSelectMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorLightGray"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorTextHintColor">

                <EditText
                    android:id="@+id/et_selectMaterial"
                    style="@style/fragmentDashboardInnerEditText"
                    android:clickable="true"
                    android:drawableRight="@drawable/category"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/selectMaterial"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:singleLine="true" />

                <ImageView style="@style/fragmentDashboardInnerView" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/borderColor"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutSelectSubMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorLightGray"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorTextHintColor">

                <EditText
                    android:id="@+id/et_selectSubMaterial"
                    style="@style/fragmentDashboardInnerEditText"
                    android:clickable="true"
                    android:drawableRight="@drawable/category"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/selectSubMaterial"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:singleLine="true" />

                <ImageView style="@style/fragmentDashboardInnerView" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/borderColor"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorLightGray"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorTextHintColor">

                <EditText
                    android:id="@+id/et_brand"
                    style="@style/fragmentDashboardInnerEditText"
                    android:clickable="true"
                    android:drawableRight="@drawable/category"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/brand"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:singleLine="true" />

                <ImageView style="@style/fragmentDashboardInnerView" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/borderColor"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorLightGray"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorTextHintColor">

                <EditText
                    android:id="@+id/et_color"
                    style="@style/fragmentDashboardInnerEditText"
                    android:clickable="true"
                    android:drawableRight="@drawable/category"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/color"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:singleLine="true" />

                <ImageView style="@style/fragmentDashboardInnerView" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/borderColor"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorLightGray"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorTextHintColor">

                <EditText
                    android:id="@+id/et_measurements"
                    style="@style/fragmentDashboardInnerEditText"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableRight="@drawable/category"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/measurement"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:singleLine="true" />

                <ImageView style="@style/fragmentDashboardInnerView" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/borderColor"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorLightGray"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorTextHintColor">

                <EditText
                    android:id="@+id/et_size"
                    style="@style/fragmentDashboardInnerEditText"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableRight="@drawable/category"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/size"
                    android:inputType="number"
                    android:maxLength="30"
                    android:singleLine="true" />

                <ImageView style="@style/fragmentDashboardInnerView" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/borderColor"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorLightGray"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorTextHintColor">

                <EditText
                    android:id="@+id/et_quantity"
                    style="@style/fragmentDashboardInnerEditText"
                    android:hint="@string/quantity"
                    android:inputType="number"
                    android:maxLength="30"
                    android:singleLine="true" />

                <ImageView style="@style/fragmentDashboardInnerView" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/borderColor"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorLightGray"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorTextHintColor">

                <EditText
                    android:id="@+id/et_note"
                    style="@style/fragmentDashboardInnerEditText"
                    android:background="@color/colorLightGray"
                    android:hint="@string/note"
                    android:maxLength="100"
                    android:maxLines="3"
                    android:minLines="1"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView style="@style/fragmentDashboardInnerView" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightGray"
            android:gravity="center">

            <Button
                android:id="@+id/btn_popUpAddMaterialSubmit"
                style="@style/textButton"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_pressed"
                android:gravity="center"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>