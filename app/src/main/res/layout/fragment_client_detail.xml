<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:text="Name"
        android:textColor="@color/deepSkyBlue"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:text="@string/gender"
            android:textColor="@color/summerSky"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/darkGrey"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="@string/email"
        android:textColor="@color/summerSky"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:autoLink="email"
        android:paddingLeft="5dp"

        android:paddingRight="3dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:autoLink="phone"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:text="@string/mobileNo"
        android:textColor="@color/summerSky"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingLeft="3dp"
            android:text="+91"
            android:textColor="@color/green"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_mobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:paddingLeft="3dp"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_clientAddressTypeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:autoLink="phone"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:text="@string/addressType"
        android:textColor="@color/summerSky"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/tv_clientAddressType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:paddingLeft="10dp"
        android:textColor="@color/darkGrey" />

    <TextView
        android:id="@+id/tv_addressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:autoLink="phone"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:text="@string/address"
        android:textColor="@color/summerSky"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/address"
        android:drawablePadding="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="3dp"
        android:textColor="@color/darkGrey"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_alternateContactText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="7dp"
        android:text="Alternate Contact Name"
        android:textColor="@color/summerSky"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_alternateContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:textColor="@color/darkGrey"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_alternateContactMobileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="7dp"
        android:text="Alternate Contact Mobile"
        android:textColor="@color/summerSky"
        android:textSize="15dp" />


    <LinearLayout
        android:id="@+id/ll_alternateContactMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_alternateContactMobile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingLeft="3dp"
            android:text="+91"
            android:textColor="@color/green"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_alternateContactMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:paddingLeft="3dp"
            android:textColor="@color/darkGrey"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>