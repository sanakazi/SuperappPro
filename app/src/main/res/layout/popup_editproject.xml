<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dp"
        android:background="@color/green"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_setTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="@string/updateProject"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:padding="12dp"
            android:src="@drawable/close" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutDesignStartDate"
        style="@style/textInputLayout"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_designStartDate"
            style="@style/fragmentDashboardInnerEditText"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:hint="@string/designStartDate"
            android:inputType="date"
            android:maxLength="15"
            android:singleLine="true" />

        <ImageView style="@style/fragmentDashboardInnerView"></ImageView>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutExecutionStartDate"
        style="@style/textInputLayout"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_executionStartDate"
            style="@style/fragmentDashboardInnerEditText"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:hint="@string/executionStartDate"
            android:inputType="date"
            android:maxLength="15"
            android:singleLine="true" />

        <ImageView style="@style/fragmentDashboardInnerView"></ImageView>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/bt_update"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="@string/update"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_pressed"/>
</LinearLayout>