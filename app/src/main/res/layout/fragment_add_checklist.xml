            <LinearLayout
                android:id="@+id/ll_materialItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/colorLightGray"
                android:orientation="vertical">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_addMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGray"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:text="@string/addMaterial"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_addMaterial"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/floatingbutton_background"
                    android:padding="10dp"
                    android:src="@drawable/add" />

            </LinearLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/colorLightGray"
                android:paddingBottom="5dp">

                <TableRow>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayoutCheckListStartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.5dp"
                        android:layout_weight="1"
                        android:background="@color/colorLightGray"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/colorTextHintColor">

                        <EditText
                            android:id="@+id/et_suitableDate"
                            style="@style/fragmentDashboardInnerEditText"
                            android:background="@color/colorLightGray"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="@string/suitableDate"
                            android:inputType="date"
                            android:maxLength="15"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageView style="@style/fragmentDashboardInnerView" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayoutCheckListEndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.5dp"
                        android:layout_weight="1"
                        android:background="@color/colorLightGray"
                        android:paddingLeft="8dp"
                        android:paddingRight="5dp"
                        android:textColorHint="@color/colorTextHintColor">

                        <EditText
                            android:id="@+id/et_suitableTime"
                            style="@style/fragmentDashboardInnerEditText"
                            android:background="@color/colorLightGray"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="@string/suitableTime"
                            android:inputType="time"
                            android:maxLength="15"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageView style="@style/fragmentDashboardInnerView" />
                    </android.support.design.widget.TextInputLayout>

                </TableRow>
            </TableLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutCheckListDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorLightGray"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorTextHintColor">

                <EditText
                    android:id="@+id/et_checkListDescription"
                    style="@style/fragmentDashboardInnerEditText"
                    android:background="@color/colorLightGray"
                    android:hint="@string/taskDescription"
                    android:maxLength="500"
                    android:maxLines="5"
                    android:minLines="2"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView style="@style/fragmentDashboardInnerView" />
            </android.support.design.widget.TextInputLayout>


