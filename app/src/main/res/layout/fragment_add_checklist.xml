        <LinearLayout
            android:id="@+id/ll_checkListJobCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/borderColor"
            android:orientation="vertical"
            android:visibility="visible">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutCheckListJobCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGray"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorTextHintColor">

                <EditText
                    android:id="@+id/et_checkListJobCategory"
                    style="@style/fragmentDashboardInnerEditText"
                    android:clickable="true"
                    android:drawableRight="@drawable/category"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Select Category*"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:singleLine="true" />

                <ImageView style="@style/fragmentDashboardInnerView" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutCheckListCoWorkerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorLightGray"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/colorTextHintColor">

                    <EditText
                        android:id="@+id/et_checkListCoWorkerName"
                        style="@style/fragmentDashboardInnerEditText"
                        android:clickable="true"
                        android:drawableRight="@drawable/category"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Co-worker*"
                        android:maxLength="30"
                        android:singleLine="true" />

                    <ImageView style="@style/fragmentDashboardInnerView" />
                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/colorLightGray"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_addMoreCoworker"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/floatingbutton_background"
                        android:padding="10dp"
                        android:src="@drawable/add" />
                </LinearLayout>
            </LinearLayout>

            <!-- <ListView
                 android:id="@+id/lv_material"
                 android:layout_width="match_parent"
